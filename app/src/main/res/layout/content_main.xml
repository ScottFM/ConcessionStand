<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.scott.concessionstand.Main"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTotal"
        android:background="@color/CoeTertiary"
        android:layout_below="@+id/txtRunningTotal"
        android:layout_toRightOf="@+id/txtRunningTotal"
        android:layout_toEndOf="@+id/txtRunningTotal" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        android:layout_marginBottom="14dp"
        android:background="@color/CoeTertiary"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/txtRunningTotal"
        android:layout_toStartOf="@+id/txtRunningTotal" />


    <com.example.scott.concessionstand.UpDownBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.example.scott.concessionstand.UpDownBox"
        android:id="@+id/udHotDog"
        app:itemPrice = "1.50"
        app:itemName = "Hot Dog"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.example.scott.concessionstand.UpDownBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.example.scott.concessionstand.UpDownBox"
        android:id="@+id/udCandy"
        app:itemPrice = "0.75"
        app:itemName = "Candy"
        android:layout_below="@+id/udHotDog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <com.example.scott.concessionstand.UpDownBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.example.scott.concessionstand.UpDownBox"
        android:id="@+id/udSoda"
        app:itemPrice = "1.00"
        app:itemName = "Soda"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Running Total - $0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/txtRunningTotal"
        android:layout_above="@+id/btnClear"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
